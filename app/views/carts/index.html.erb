<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Customer</th>
      <th>Quantity</th>
      <th>Total amount</th>
      <th>Is checked out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product %></td>
        <td><%= cart.customer %></td>
        <td><%= cart.quantity %></td>
        <td><%= cart.total_amount %></td>
        <td><%= cart.is_checked_out %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

